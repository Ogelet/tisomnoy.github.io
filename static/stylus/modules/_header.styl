body
	font 14px mFont
	line-height 1.7
header
	position fixed
.top_line
	background url(../img/pattern1.png), linear-gradient(to bottom, #662d8c, #c31eb4 100%)
	padding 10px 115px 14px
	a
		color #fff
	img
		width 28px
	.our_links
		float right
		overflow hidden
		li
			display inline-block
			a
				padding 1px 38px
				display inline-block
				font-size 14px Gen
				&:hover
					background-color: #fff
					color main
					border-radius 17px
.middle_line
	background: url(../img/pattern-2.png), #fff
	padding 0 115px
	color purp
	height 76px
	z-index 100
	.phone
		float right
		overflow hidden
		margin-right 75px
		padding-top 10px
	.logo
		float left
		vertical-align top
		overflow hidden
	a
		color #93278f
	.phone_num
		font 22px Gen
		margin-right 55px
	.free
		display block
		position relative
		left 8%
		font-size 10px
		line-height 1.4
.dropbtn 
	cursor pointer
	margin-left 10px
	text-decoration underline
/* The container <div> - needed to position the dropdown content */
.dropdown 
	right 130px
	top 57px
	position absolute
	display inline-block
	font-size 14px
	z-index 5
/* Dropdown Content (Hidden by Default) */
.dropdown-content 
	display none
	position absolute
	width 130px
	right -63px
	background-color #fff
/* Links inside the dropdown */
.dropdown-content a 
	padding 4px 0 4px 4px
	text-decoration none
	display block
	font-size 14px
/* Change color of dropdown links on hover */
.dropdown-content
	a:hover
		background-color: #EFEFEF
		text-decoration underline
/* Show the dropdown menu on hover */
.dropdown:hover
	border-bottom none
	.dropdown-content 
		display block
.bottom_line
	background linear-gradient(to bottom, #93278f, rgba(147, 39, 143, 0.8) 100%)
	z-index 150
	.top_mnu
		padding 22px 0
		li
			display inline-block
			margin-right 5%
			&:first-child
				a
					border-bottom 1px solid #fff
			a
				color #fff
				font 14px Tre
				letter-spacing 1px
				&:hover
					border-bottom 1px solid #fff
	.insert_mnu
		display none
		position absolute
		background-image url(../img/ava-1.jpg)
		background-repeat no-repeat
		background-position: bottom right
		background-size: contain
		background-color: #FFF
		width 900px
		height 220px
		box-shadow 0 0 7px #C6C6C6
		padding 15px
		right 15%
		top 67px
		li
			margin-bottom 13px
			display inline-block
			width 248px
			margin-right 0
			text-align center
			a
				color text
				text-align center
				cursor pointer
				&:hover
					color purp
					border-bottom 1px solid purp
.insert_mnu_show
	display block
