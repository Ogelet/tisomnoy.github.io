footer
	background linear-gradient(to bottom, #93288F, #93288F 70%, #82268F 100%)
	color #fff
	padding 20px 0 20px
	a
		color #fff
		cursor pointer
		&:hover
			border-bottom 1px solid #fff
	.logo
		margin-bottom 10px
	h6
		margin-bottom 20px
		font-size 12px
		font-weight 400
	p
		font-size 12px
		width 97%
		line-height 1.5
		margin-bottom 10px
	span
		font-size 10px
.fastlink
	padding-left 60px
	font-size 16px
	letter-spacing 1px
	li
		font-size 12px
		letter-spacing 1px
		margin-top 8px
		background-repeat no-repeat
		background-size 25px
		padding 5px 0 12px 35px
		&:first-child
			background-image: url(../img/flink1.png)
			margin-top 20px
		&:nth-child(2)
			background-image: url(../img/flink2.png)
		&:nth-child(3)
			background-image: url(../img/flink3.png)
		&:nth-child(4)
			background-image: url(../img/flink4.png)
		&:nth-child(5)
			background-image: url(../img/flink5.png)
.contlink
	letter-spacing 1px
	font-size 16px
	li
		font-size 12px
		margin-top 0
		background-repeat no-repeat
		background-size 25px
		padding 0 0 12px 35px
		
		&:first-child
			margin-top 20px
			background-image: url(../img/cont1.png)
		&:nth-child(2)
			background-image: url(../img/cont2.png)
		&:nth-child(3)
			background-image: url(../img/cont3.png)
		&:nth-child(4)
			background-image: url(../img/cont4.png)
.sitemap
	margin 10px 0 20px
	display block
	width 84px
	border-bottom 1px solid #fff
.soc_wrap
	li
		display inline-block
		background-repeat no-repeat
		height 35px
		width 35px
		margin-right 5px
		a
			width 100%
			height 100%
			&:hover
				border none