.video_bg
	background-image:  url(../img/pattern1.png), url(../img/bg_video.jpg)
	width 100%
	height 100vh
	background-size 2px, cover
	opacity 0.83
	background-attachment fixed, fixed
.video
	padding-top 20px
	.pink
		color purp
		font-style italic
		&:hover
			color main
	p
		margin-bottom 20px
	.video_list
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		flex-direction row
		flex-wrap wrap
		justify-content space-between
		.video_item
			max-width 312px
			position relative
			margin-bottom 50px
			margin-right 55px
			.about_video
				background-color: rgb(0,0,0)
				opacity 0.8
				color #fff
				text-align center
				position absolute
				display none
				top 39px
				height 205px
				font-family mFont
				padding 12px 8px 8px 8px
				h6
					font-weight 400
					font-size 14px
					margin-bottom 10px
				p
					font-size 12px
					line-height 1.3
				button
					background-color: #FFF
					font-size 12px
					padding 5px 12px
					border-radius 3px
					color blt
			&:hover .about_video
				display block
			h5
				color purp
				font-size 14px
				margin-bottom 15px
				text-align center
#video_slide
	width 60%
	display block
	margin 0 auto
	padding 30px