.reviews_bg
	background-image:  url(../img/pattern1.png), url(../img/reviews.jpg)
	width 100%
	height 100vh
	background-size 2px, cover
	opacity 0.83
	background-attachment fixed, fixed
.reviews
	h3
		font-size 30px
		font-weight 400
		margin-bottom 0
		&:after
			margin 10px auto 0
	p
		text-align center
		margin-top 20px
		line-height 1.4
#new_review, #ask_qwest, #message
	position relative
	width 40%
	height auto
	background-color: #FFF
	padding 20px
	display block
	margin 0 auto
	label, input
		display block
		width 60%
		margin 0 auto
		letter-spacing 1px
	input
		border 1px solid purp
		padding 7px
		margin-bottom 15px
		&:hover
			background-color: #FAFAFA
	textarea
		border 1px solid purp
		width 60%
		margin 0 auto 
		display block
		height 100px
		margin-bottom 15px
		padding 7px
		&:hover
			background-color: #FAFAFA
	.field
		width 50%
		margin 0 auto
		input[type="checkbox"]
			display inline
			width 20px
		label
			display inline
	input::-webkit-input-placeholder, textarea::-webkit-input-placeholder
		font-style italic
		font-size 12px
		color #8C8C8C
	input::-moz-placeholder, textarea::-moz-placeholder
		font-style italic
		font-size 12px
		color #8C8C8C
	.button_mk
		background-color: #FFF
		border 1px solid greyl
		display block
		margin 20px auto
		padding 10px 40px
		border-radius 3px
		&:hover
			background-color purp
			color #fff
			border 1px solid purp
	p
		margin-bottom 60px
		text-align center
.but_review, .but_applic2
	background-color: #FFF
	border 1px solid greyl
	display inline-block
	margin 30px 0
	padding 10px 40px
	border-radius 3px
	width 25%
	text-align center
	margin-left 16.5%
	&:hover
		background-color purp
		color #fff
		border 1px solid purp
.review_item
	width 90%
	display block
	margin 20px auto 30px
	padding 10px
	box-shadow 0 0 10px greyl
	transition 2s
	h5
		color blt
	p
		text-align left
		margin-bottom 10px
	span
		font-style italic
