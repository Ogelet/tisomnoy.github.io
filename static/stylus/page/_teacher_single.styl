.teacher_single
	margin-bottom 60px
	h2
		font-size 24px
		font-weight 400
		color text
		text-align center
	h3
		font-size 12px
		color text
		font-weight 400
		font-family Ver
		margin 0
		letter-spacing 0
		&:after
			width 100%
	.li_pages
		margin-left 40%
		margin-bottom 30px
		a
			margin-right 5px
			color text
		span
			display inline-block
	p
		font-size 14px
		line-height 1.4
		color text
	span
		color greyt
		margin 20px 0
		display block
	a
		color purp
		&:hover
			color main
	ul
		padding-left 35px
		li
			list-style-type disc
			list-style-position inside
			line-height 1.4
			&:first-child
				margin-top 20px
		&:after
			content ""
			height 1px
			width 100%
			margin 10px auto
			background-color greyl
			display block
	.item
		display inline-block
		max-width 40%
		width 270px
		margin-bottom 30px
		vertical-align top
		margin-left 35px
		span
			margin 0

.teacher_portfolio
	margin-top 50px
	h3
		margin-bottom 50px
		&:after
			display none
	h4
		text-align center
	.portfolio_photo
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		flex-direction row
		flex-wrap wrap
		justify-content space-between
		padding 25px
		margin-bottom 55px
		.port_photo
			width 230px
			height 300px
			object-fit cover
			margin-bottom 25px
	.portfolio_video
		padding 25px
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		flex-direction row
		flex-wrap wrap
		justify-content space-between
		iframe
			margin 10px 10px 25px 0
