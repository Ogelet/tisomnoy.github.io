.teachers_bg
	background-image:  url(../img/pattern1.png), url(../img/bg_teachers.jpg)
	width 100%
	height 100vh
	background-size 2px, cover
	opacity 0.83
	background-attachment fixed, fixed
.studia_teachers
	background transparent
	margin-bottom 0
	margin-top 100px
	h3
		font-weight 400
		font-size 30px
		&:after
			width 100%
	p
		margin-top 20px
.teachers_list
	background-color: #fff
	margin 60px 0
	display -webkit-flex
	display -moz-flex
	display -ms-f
	display -o-flex
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content center
	&:after
		content ""
		width 106%
		height 77%
		top 315px
		position absolute
		display block
		border 1px solid greyl
		z-index -1
	.teacher
		position: relative
		text-align center
		margin 0 30px 50px
		a
			font-size 18px
			color #383838
			&:after
				content ""
				width 95%
				height 1px
				background-color greyl
				display block
				margin-bottom 5px
		h6
			font-size 14px
			font-weight 400
		span
			font-size 12px
		.achievements
			li
				font-size 12px
				line-height 1.4
				list-style-type disc
		img
			height 340px
			width 295px
			object-fit contain
			display block
			-webkit-filter: grayscale(100%);
			-moz-;filter: grayscale(100%);
			-ms-filter: grayscale(100%);
			-o-filter: grayscale(100%);
			filter: grayscale(100%);
			filter: gray
			&:hover
				-webkit-filter none
				-moz-;filter none
				-ms-filter none
				-o-filter none
				filter none
				filter none
