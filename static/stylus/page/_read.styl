.read_bg
	background-image:  url(../img/pattern1.png), url(../img/bg_read.jpg)
	width 100%
	height 100vh
	background-size 2px, cover
	opacity 0.83
	background-attachment fixed, fixed
.read
	z-index 0
	h3
		font-weight 400
		font-size 28px
		z-index 150
		background-color: #FFF
		width 480px
		margin 0 auto
		position relative
	.artical_list
		z-index 15
		margin-top 30px
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		flex-direction row
		flex-wrap wrap
		justify-content space-between
		position relative
		&:after
			content ""
			width 106%
			height 110%
			top -9%
			left -5.5%
			position absolute
			display block
			border 1px solid greyl
			z-index -1
		.artical
			z-index 9
			max-width 300px
			position relative
			margin-bottom 50px
			margin-right 55px
			.about_artical
				z-index 10
				background-color: rgb(0,0,0)
				opacity 0.8
				color #fff
				text-align center
				position absolute
				display none
				top 22px
				height 225px
				font-family mFont
				padding 12px 8px 8px 8px
				h6
					font-weight 400
					font-size 16px
					margin-bottom 10px
				p
					font-size 12px
					line-height 1.3
					margin-bottom 10px
				button
					background-color: #FFF
					font-size 12px
					padding 5px 12px
					border-radius 3px
					color blt
			&:hover .about_artical
				display block
			h5
				color greyt
				text-align left
				font-size 10px
				font-weight 400
				margin-bottom 5px
