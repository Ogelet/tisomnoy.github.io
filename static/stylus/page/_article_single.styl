.read_bg
	background-image:  url(../img/pattern1.png), url(../img/bg_read.jpg)
	width 100%
	height 100vh
	background-size 2px, cover
	opacity 0.83
	background-attachment fixed, fixed
.single_article
	color blt
	line-height 1.4
	.li_pages
		margin-left 33%
		margin-bottom 50px
	h3
		font-weight 400
		font-size 28px
		text-align center
	img 
		width 100%
		height auto
		max-width 300px
		max-height 225px
		margin 10px auto 20px
		display block
	p
		margin 10px 0
	article
		span
			color greyt
			font-style italic
.links_article
	color purp
	&:before
		content ""
		height 1px
		width 100%
		background-color greyl
		margin 20px 0 40px
		display block
	p 
		font-weight 600
		margin-bottom 20px
	ul li
		list-style-type disc
		list-style-position inside
		margin-bottom 15px
		a
			color purp
			padding-left 10px
			&:hover
				color main