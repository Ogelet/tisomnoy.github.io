.contacts_bg
	background-image:  url(../img/pattern1.png), url(../img/contacts.jpg)
	width 100%
	height 100vh
	background-size 2px, cover
	opacity 0.83
	background-attachment fixed, fixed
.contacts
	h3
		font-weight 700
		font-size 28px
		background-color: #FFF
		text-align left
		color text
		&:after
			margin 10px 0
			width 50%
	.cont
		font-size 12px
		font-family Gen
		.strong
			font-weight 800
			color blt
		.post
			text-decoration underline
	.map
		border 1px solid greyl
		padding 8px
		width 470px
		margin 20px 20px 45px 40px
		display block
	.soc_link
		li
			display inline-block
			border-radius 20px
			width 40px
			height 40px
			text-align center
			margin-right 6px
			&:first-child
				background-color #519FCC
			&:nth-child(2)
				background-color #5C99DB
			&:nth-child(3)
				background-color #E16962
			&:nth-child(4)
				background-color #CC8E8E
			&:nth-child(5)
				background-color #00B297
			&:nth-child(6)
				background-color #00BFF3
			a
				display block
				padding-top 8px
				i
					font-size 24px
					font-family FontAwesome
					color #fff
	.soc_link
		h3
			text-align center
			&:after
				margin 10px auto
				width 50%
		ul
			text-align center
			margin-bottom 40px
	#message
		padding 0
		width 100%
		label, input, textarea
			margin-left 0
		input, textarea
			border 1px solid greyl
			background-color #FAFAFA
			&:hover
				background-color: #fff
		label
			font-size 12px
			margin-bottom 7px
		.purp_but
			color text
			margin 100px 0 40px 78px
			&:hover
				background-color: #FAFAFA
				border 1px solid greyl
	h6
		font-size 26px
		color text
		font-weight 400
	.write
		border 1px solid greyl
		padding 25px
		width 70%
		text-align center
.contacts_region
	.soc_link
		margin-top 60px
		h3
			text-align left
			&:after
				margin-left 0
		ul
			text-align left